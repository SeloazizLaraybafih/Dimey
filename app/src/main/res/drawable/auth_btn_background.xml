<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for the background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/auth_btn"/> <!-- Default background color -->
            <corners android:radius="8dp"/> <!-- Optional: Set corner radius for rounded corners -->
        </shape>
    </item>
    <!-- Layer for the stroke -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black"/> <!-- Stroke color and width -->
            <corners android:radius="20dp"/> <!-- Optional: Set corner radius for rounded corners -->
        </shape>
    </item>
</layer-list>